<% layout('layouts/boilerplate') %>
<link rel="stylesheet" href="/stylesheets/star.css">

<div class="row">
    <div class="col-6 pb-2">
      <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
          <% campground.images.forEach((img,i)=> { %>
            <div class="carousel-item <%= i===0 ? 'active' : '' %>">
              <img crossorigin="anonymous" class="d-block w-100" src="<%=img.url%>" alt="">
            </div>
          <% }) %>
        </div>
        <% if(campground.images.length > 1) {%>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-bs-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-bs-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
        <% } %>
      </div>

        <div class="card">
          <div class="card-body">
              <h3 class="show-tittle card-title ul pb-3"><%= campground.tittle %></h3>
              <p class="mb-0"><u>About Campground</u></p>
              <p class="card-text"><%= campground.description %></p>
          </div>
            <ul class="list-group list-group-flush">
              <li class="list-group-item text-muted">Located at <span class="text-danger"><%= campground.location %></span></li>
              <li class="list-group-item">â‚¹<%= campground.price %>/night</li>
              <li class="list-group-item">Submitted by <strong><%=campground.author.username%></strong></li>
            </ul>
            <% if(currentUser && campground.author.equals(currentUser._id)) {%>
          <div class="card-body">
                <a href="/campgrounds/<%=campground._id%>/edit" class="card-link btn btn-info">Edit this Campground</a>
            </div>
            <% } %>
          <div class="card-footer text-muted">
              <form class="mb-1" action="/campgrounds/<%=campground._id%>?_method=DELETE" method="post">
                <button class="btn btn-danger col-12">DELETE THIS CAMPGROUND</button>
              </form>
          </div>
        </div>
    </div>

    <div class="col-6">
      <div id="map"></div>
       <%# For adding reviews:- %>
       <% if(currentUser){ %>
       <h2 class="mt-5">Leave a Review</h2>
       <form action="/campgrounds/<%=campground._id%>/reviews" method="post" class="my-1 Validated-form" novalidate>
         <fieldset class="starability-basic">
          <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="0" checked aria-label="No rating." />
          <input type="radio" id="first-rate1" name="review[rating]" value="1" />
          <label for="first-rate1" title="Terrible">1 star</label>
          <input type="radio" id="first-rate2" name="review[rating]" value="2" />
          <label for="first-rate2" title="Not good">2 stars</label>
          <input type="radio" id="first-rate3" name="review[rating]" value="3" />
          <label for="first-rate3" title="Average">3 stars</label>
          <input type="radio" id="first-rate4" name="review[rating]" value="4" />
          <label for="first-rate4" title="Very good">4 stars</label>
          <input type="radio" id="first-rate5" name="review[rating]" value="5" />
          <label for="first-rate5" title="Amazing">5 stars</label>
        </fieldset>
         <div class="mb-3">
           <label class="form-label" for="body"></label>
           <textarea class="form-control" name="review[body]" id="body" cols="30" rows="2" required autofocus></textarea>
           <%# adding validation %>
           <div class="valid-feedback">
           Looks good!
           </div>
           <div class="invalid-feedback">
           Please add review!
           </div>
         </div>
         <button class="btn btn-secondary"><span class="material-symbols-outlined">add_comment</span></button>
       </form>
       <% } %>

       <% if(campground.reviews <=0) {%>
        <div class="alert alert-warning d-flex align-items-center" role="alert">
          <svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Warning:"><use xlink:href="#exclamation-triangle-fill"/></svg>
          <div>
            No reviews made yet.
          </div>
        </div>
       <% }%>

       <%# displaying reviews %>
       <% for (let review of campground.reviews){ %>
         <div class="card mb-3">
          <h6 class="card-title text-muted ">--<%= review.author.username %></h6>
           <div class="card-body p-1">
             <p class="mb-0"><b>Rating : </b><%= review.rating %></p>
             <p class="starability-result mb-0" data-rating="<%= review.rating %>">Rated: <%= review.rating %>stars</p>
             <p class="mb-0"><b>Review : </b><%= review.body %></p>
             <% if(currentUser && review.author.equals(currentUser._id)){ %>
              <form class="mb-0" action="/campgrounds/<%=campground._id%>/reviews/<%=review._id%>?_method=DELETE" method="post">
              <button class="btn btn-small btn-danger"><span class="fa fa-trash-o" style="font-size:28px;color:white"> &#128465; </span></button>
              </form>
              <% } %>
           </div>
         </div>
         <% }%>

    </div>
</div>

<script>
  const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
  const  campground = <%-JSON.stringify(campground)%>
</script>

<script src="/javascripts/showmap.js"></script>

