<% layout('layouts/boilerplate') %>

  <%# we have used Bootstrap here %>

    <div class="row">
        <h1 class="text-center display-5 col-6 offset-3" id="campgroundH1">Add New Campground</h1>
        <div class="col-6 offset-3">
            <form action="/campgrounds" method="post" novalidate class="Validated-form" enctype="multipart/form-data">
                <div class="mb-2">
                    <label class="form-label" for="tittle"><b>Tittle</b></label>
                    <input class="form-control" type="text" id="tittle" name="campground[tittle]" required>

                    <%# it is for valid and invalid feedbacks that is shown to user and for this included Js Function in boilerPlate folder. %>
                    <div class="valid-feedback">
                        Looks good !
                    </div>
                    <div class="invalid-feedback">
                        Please enter the Tittle.
                    </div>

                </div>
                <div class="mb-2">
                    <label class="form-label" for="location"><b>Location</b></label>
                    <input class="form-control" type="text" id="location" name="campground[location]" required>

                    <%# it is for valid and invalid feedbacks that is shown to user and for this included Js Function in boilerPlate folder. %>
                    <div class="valid-feedback">
                        Looks good !
                    </div>
                    <div class="invalid-feedback">
                        Please provide Location. 
                    </div>

                </div>

                <div class="mb-2">
                    <div class="mb-3">
                        <label for="image" class="form-label"><b>Add Images</b></label>
                        <input class="form-control" type="file" id="image" name="image" multiple>
                    </div>
                </div>    

                <div class="mb-2">
                    <label for="price"><b>Price</b></label>
                    <div class="input-group">
                        <span class="input-group-text" id="price-label">â‚¹</span>
                    <input type="text" class="form-control" name="campground[price]" id="price" placeholder="0.0" aria-label="price" aria-describedby="price-label" required>

                    <%# it is for valid and invalid feedbacks that is shown to user and for this included Js Function in boilerPlate folder. %>
                    <div class="valid-feedback">
                        Looks good !
                    </div>
                    <div class="invalid-feedback">
                        Please mention the Price. 
                    </div>
                    
                    </div>
                </div>
                <div class="mb-2">
                    <label class="form-label" for="description"><b>Description</b></label>
                    <textarea class="form-control" name="campground[description]" id="description" cols="5" rows="2" required></textarea>

                    <%# it is for valid and invalid feedbacks that is shown to user and for this included Js Function in boilerPlate folder. %>
                    <div class="valid-feedback">
                        Looks good !
                    </div>
                    <div class="invalid-feedback">
                        Please Enter Description.
                    </div>
                    
                </div>
                    <button class="btn btn-success mt-3 col-12">Add CampGrounds</button>
            </form>
        </div>
        <div class="text-center"><a href="/campgrounds" class="link-dark">Home Campgrounds</a></div>
    </div>